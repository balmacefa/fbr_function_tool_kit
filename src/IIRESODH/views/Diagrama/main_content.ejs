<script type="module">
  import mermaid from "https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs";
  mermaid.initialize({ startOnLoad: true });

  $(document).ready(function () {
    // Wait for the Mermaid diagram to be rendered
    setTimeout(function () {
      // Selecting all node groups in the SVG and adding a click event
      $("svg .mindmap-node").click(function () {
        alert("Node clicked: " + $(this).text());
      });

      // Example: Change color on hover
      $("svg .mindmap-node").hover(
        function () {
          $(this).find("path, circle").css("fill", "lightblue");
        },
        function () {
          $(this).find("path, circle").css("fill", "");
        }
      );
    }, 1000); // Adjust the timeout as necessary
  });
</script>
